{
    "name": "root",
    "private": true,
    "scripts": {
        "i": "lerna bootstrap",
        "commit": "git cz",
        "release": "standard-version",
        "start:c": "lerna run start --scope @gf-sten/components",
        "generate:c": "lerna run generate --scope @gf-sten/components",
        "build:js": "node ./scripts/rollup/build.js --mode",
        "test": "jest"
    },
    "devDependencies": {
        "@babel/core": "^7.17.8",
        "@babel/plugin-transform-modules-commonjs": "^7.17.7",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@commitlint/cli": "^16.2.3",
        "@rollup/plugin-babel": "^5.3.1",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "babel-jest": "^27.5.1",
        "commitizen": "^4.2.4",
        "commitlint-config-cz": "^0.13.3",
        "cz-customizable": "^6.3.0",
        "husky": "^1.2.0",
        "jest": "^27.5.1",
        "lerna": "^4.0.0",
        "rollup": "^2.70.1",
        "rollup-plugin-uglify": "^6.0.4",
        "standard-version": "^9.3.2",
        "yorkie": "^2.0.0"
    },
    "workspaces": [
        "packages/*"
    ],
    "jest": {
        "testMatch": [
            "**/__tests__/**/*.test.js"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -e -V"
        }
    }
}